<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.products.list">
            <block class="Magento\Catalog\Block\Product\ProductList\Toolbar" name="toolbar_bottom" template="Magento_Catalog::product/list/toolbar.phtml">
                <block class="Magento\Theme\Block\Html\Pager" name="product_list_toolbar_bottom_pager" as="product_list_toolbar_pager"/>
            </block>
        </referenceBlock>

        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="add_base_attribute_aria" xsi:type="string">page-title-heading</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
